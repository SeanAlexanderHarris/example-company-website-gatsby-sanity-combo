{
  "include": ["./**/*.ts"],
  "exclude": ["node_modules/*", "public/*"],
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "es2017"],
    "allowJs": true,
    // "checkJs": true,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "moduleResolution": "node",

    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
